{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "noUnusedLocals": false,
    "lib": ["es2022", "DOM"],
    "noEmit": false,
    "strict": true,
    "allowImportingTsExtensions": false,
    "noImplicitReturns": false,
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "verbatimModuleSyntax": false,
    "types": ["node"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["./src/**/*", "./test/**/*"]
}
